{
  "name": "webapp",
  "type": "module",
  "engines": {
    "node": "20.x",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "vite",
    "prebuild": "node -v && npm -v",
    "build": "vite build --config vite.client.config.ts && vite build && cp -r public/* dist/ && node scripts/update-eiken-html.mjs",
    "postbuild": "test -d dist && test -f dist/_worker.js && test -d dist/assets || (echo 'âŒ Build output missing' && exit 1)",
    "preview": "wrangler pages dev dist --ip 0.0.0.0 --port 3000",
    "dev:sandbox": "wrangler pages dev dist --d1=kobeya-logs-db --local --ip 0.0.0.0 --port 3000",
    "deploy": "npm run build && wrangler pages deploy dist --project-name kobeyabkk-studypartner",
    "deploy:prod": "npm run build && wrangler pages deploy dist --project-name kobeya-programming",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "test": "curl http://localhost:3000",
    "db:migrate:local": "wrangler d1 migrations apply kobeya-logs-db --local",
    "db:console:local": "wrangler d1 execute kobeya-logs-db --local",
    "db:reset": "rm -rf .wrangler/state/v3/d1 && npm run db:migrate:local"
  },
  "dependencies": {
    "compromise": "^14.14.4",
    "framer-motion": "^11.11.17",
    "hono": "^4.9.9",
    "jose": "^6.1.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.6",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251111.0",
    "@hono/vite-build": "^1.7.0",
    "@hono/vite-dev-server": "^0.18.3",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.10.0",
    "@types/react": "^19.2.6",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "better-sqlite3": "^12.4.1",
    "playwright": "^1.56.1",
    "typescript": "^5.9.3",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  }
}
